// Main Water demo material
Examples/Water0
{ 
   ambient 1 1 1 0.8
   diffuse 1 1 1 0.8
   scene_blend modulate
   { 
      texture Water01.jpg 
      scroll_anim .01 .01 
      env_map spherical 
   } 
} 

