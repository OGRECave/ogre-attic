Examples/Water8
{
    // No dynamic lighting, fully lit
    lighting off
    
    // Texture layer 0
    {
        // 6-sided texture, cubemap_fr.jpg, cubemap_up.jpg etc
        cubic_texture cubescene.jpg combinedUVW
        // set reflection environment map
        env_map cubic_reflection
        // clamp to avoid fuzziness at edges due to filtering
        tex_address_mode clamp
    }
}

// From Antiarc #2 with cubemap
