//---------------------------------------------------
// This file includes a number of basic GPU programs
// for use in many materials. 
//---------------------------------------------------


// A really basic ambient pass program, support for one texture coodinate set
vertex_program Ogre/BasicVertexPrograms/AmbientOneTexture asm
{
	source Example_Basic.asm
	syntax arbvp1
}

// Basic hardware skinning using one indexed weight per vertex
vertex_program Ogre/HardwareSkinningOneWeight asm
{
   source Example_HardwareSkinningOneWeight.asm
   syntax arbvp1
   includes_skeletal_animation true
}
// Basic hardware skinning using four indexed weights per vertex
vertex_program Ogre/HardwareSkinningFourWeights asm
{
   source Example_HardwareSkinningFourWeights.asm
   syntax arbvp1
   includes_skeletal_animation true
}


