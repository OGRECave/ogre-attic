material RTSS/Example-LayeredBlending
{
	technique
	{
		pass
		{
			lighting off
			texture_unit
			{
				scale 0.1 0.1
				texture rockwall.tga
			}

			texture_unit
			{
				rtshader_system
				{
					layered_blend blend_overlay
				}
				texture ogrelogo.png
			}
			
			rtshader_system
			{
			// you must have this section (even empty) for the layered blend to 
			// work. Also - this section must me the last one in the pass.
			}
		}
	}
}

