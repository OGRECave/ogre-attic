// A material for the environment mapped knot
Examples/EnvMappedRustySteel
{
	ambient 1.0 1.0 1.0
	diffuse 1.0 1.0 1.0
	// Texture layer 0
	{
		texture RustySteel.jpg
	}
	// Texture layer 1
	{
		texture spheremap.png
		colour_op add
		env_map spherical

	}
}

