// Rotation and wave scale
Examples/TextureEffect1
{
	ambient 0.75 0.75 0.75
	// double-sided
	cull_hardware none
	cull_software none
	// Tex layer 0
	{
		texture BumpyMetal.jpg
		// Scale in x and y over a wave
		wave_xform scale_x sine 1 0.1 0 5
		wave_xform scale_y sine 0.5 0.2 0.5 3
		// Constant rotate
		rotate_anim 0.2
	}
}

